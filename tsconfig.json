{
  "extends": "./node_modules/@tsconfig/node12/tsconfig.json",

  "compilerOptions": {
    "preserveConstEnums": true,
    "baseUrl": "src/",
    "allowJs": true,
    "typeRoots" : ["./node_modules/@types", "./types"],
    "outDir": "build",
    "paths": {
      "@/*": ["./*"],
      "@": ["."]
    }
  },

  "include": ["types", "src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}